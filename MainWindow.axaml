<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="using:GameOfLife.Avalonia"
        x:Class="GameOfLife.Avalonia.MainWindow"
        Width="900" Height="700" Title="Game of Life" WindowStartupLocation="CenterScreen" WindowState="Normal">
  <DockPanel>
    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="8" Spacing="8">
      <Button Content="{Binding RunText}" Command="{Binding Run}"/>
      <Button Content="Step" Command="{Binding Step}"/>
      <Button Content="Clear" Command="{Binding Clear}"/>
      <Button Content="Random" Command="{Binding Randomise}"/>
      <TextBlock VerticalAlignment="Center" Text="Speed"/>
      <Slider Minimum="5" Maximum="500" Width="150" Value="{Binding IntervalMs}" IsDirectionReversed="True"/>
      <TextBlock VerticalAlignment="Center" Text="Cell"/>
      <Slider Minimum="4" Maximum="20" Width="150" Value="{Binding CellSize}"/>
      <TextBlock VerticalAlignment="Center" Text="Wrap"/>
      <ToggleSwitch IsChecked="{Binding Wrap}"/>
    </StackPanel>
    <Border Margin="8" Background="Transparent">
      <local:LifeView ViewModel="{Binding}"/>
    </Border>
  </DockPanel>
</Window>


